%p#notice= notice
%h1 Categories
= link_to 'Todo List', todo_lists_path
%br/
%table
  %thead
    %tr
      %th Id
      %th Title
      %th{:colspan => "3"}
  %tbody
    - @category.each do |category|
      %tr
        %td= category.id
        %td= category.title
        %td= link_to 'Show', category_path(category)
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', categories_path, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Category', new_category_path

